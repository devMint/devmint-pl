---
import { twMerge } from 'tailwind-merge'

const classNames = twMerge(
  'w-full m-auto max-w-full prose',
  'dark:prose-invert',
  'prose-headings:font-logo prose-headings:w-full prose-headings:max-w-[760px] prose-headings:m-auto',
  'prose-h1:text-xl prose-h1:font-bold',
  'prose-p:m-auto prose-p:max-w-[760px] prose-p:text-justify prose-p:my-8',
  'prose-a:text-secondary',
  'prose-img:rounded-xl prose-img:w-full prose-img:max-w-[960px] prose-img:my-8 prose-img:mx-auto',
  'prose-ul:w-full prose-ul:max-w-[760px] prose-ul:m-auto',
  'prose-table:w-full prose-table:max-w-[760px] prose-table:m-auto',
  'prose-code:w-full prose-code:max-w-[760px] prose-code:m-auto',
  'prose-pre:w-full prose-pre:max-w-[760px] prose-pre:m-auto',
)
---

<article class={classNames}>
  <slot />
</article>
