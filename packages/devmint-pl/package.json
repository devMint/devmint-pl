{
  "name": "@devmint/devmint-pl",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "dev": "react-router dev",
    "start": "wireit",
    "deploy": "wireit",
    "typecheck": "wireit"
  },
  "wireit": {
    "build": {
      "command": "react-router build",
      "dependencies": [
        "typecheck"
      ],
      "files": [
        "app/**/*"
      ]
    },
    "typecheck:wrangler": {
      "command": "pnpm wrangler types",
      "files": [
        "wrangler.toml",
        "app/**/*"
      ],
      "output": [
        "worker-configuration.d.ts"
      ]
    },
    "typecheck:react-router": {
      "command": "react-router typegen",
      "files": [
        "app/**/*"
      ],
      "output": [
        ".react-router/**/*"
      ]
    },
    "typecheck": {
      "command": "tsc",
      "dependencies": [
        "typecheck:wrangler",
        "typecheck:react-router"
      ],
      "files": [
        "app/**/*",
        ".react-router/**/*",
        "worker-configuration.d.ts"
      ]
    },
    "start": {
      "command": "wrangler dev",
      "dependencies": [
        "build"
      ]
    },
    "deploy": {
      "command": "wrangler deploy",
      "dependencies": [
        "build"
      ]
    }
  },
  "dependencies": {
    "@react-router/fs-routes": "^7.6.2",
    "feed": "^5.1.0",
    "isbot": "^5.1.28",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-router": "^7.6.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.10",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.7.5",
    "@cloudflare/vitest-pool-workers": "^0.8.46",
    "@react-router/dev": "^7.6.2",
    "@responsive-image/core": "^2.0.0",
    "@responsive-image/react": "^1.1.0",
    "@responsive-image/vite-plugin": "^2.0.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.10",
    "@types/node": "^24.0.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "tailwindcss-animated": "^2.0.0",
    "typescript": "^5.8.3",
    "vite": "^6",
    "vite-tsconfig-paths": "^5.1.4",
    "wireit": "^0.14.12",
    "wrangler": "^4.21.2"
  }
}
