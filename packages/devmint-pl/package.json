{
  "name": "@devmint/devmint-pl",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "build:images": "wireit",
    "dev": "react-router dev",
    "start": "wireit",
    "deploy": "wireit",
    "typecheck": "wireit",
    "clean:images": "rimraf public/assets && rimraf app/assets && mkdir -p public/assets && mkdir -p app/assets"
  },
  "wireit": {
    "build": {
      "command": "react-router build",
      "dependencies": [
        "clean:images",
        "build:images",
        "typecheck"
      ],
      "files": [
        "app/**/*",
        "public/**/*"
      ]
    },
    "typecheck:wrangler": {
      "commnand": "pnpm wrangler types",
      "files": [
        "wrangler.toml",
        "app/**/*"
      ]
    },
    "typecheck:react-router": {
      "command": "react-router typegen",
      "files": [
        "app/**/*"
      ],
      "output": [
        ".react-router/**/*"
      ]
    },
    "typecheck": {
      "command": "tsc",
      "dependencies": [
        "build:images",
        "typecheck:wrangler",
        "typecheck:react-router"
      ],
      "files": [
        "app/**/*",
        "app/assets/**/*",
        "public/**/*",
        ".react-router/**/*"
      ]
    },
    "start": {
      "command": "wrangler dev",
      "dependencies": [
        "build"
      ]
    },
    "deploy": {
      "command": "wrangler deploy",
      "dependencies": [
        "build"
      ]
    },
    "build:images": {
      "command": "tsx scripts/transform-images.ts",
      "dependencies": [
        "clean:images"
      ],
      "files": [
        "scripts/transform-images.ts",
        "public/raw/**/*"
      ],
      "output": [
        "public/assets/**/*",
        "app/assets/**/*"
      ]
    }
  },
  "dependencies": {
    "@react-router/fs-routes": "^7.6.1",
    "isbot": "^5.1.28",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-router": "^7.6.1",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.8",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.3.1",
    "@cloudflare/vitest-pool-workers": "^0.8.34",
    "@react-router/dev": "^7.6.1",
    "@tailwindcss/vite": "^4.1.8",
    "@types/node": "^22.15.24",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "rimraf": "^6.0.1",
    "sharp": "^0.34.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "wireit": "^0.14.12",
    "wrangler": "^4.18.0"
  }
}
