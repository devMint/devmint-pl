{
  "name": "@devmint/devmint-pl",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "wireit",
    "astro": "astro",
    "deploy": "wireit",
    "typecheck": "wireit"
  },
  "wireit": {
    "typecheck": {
      "command": "wrangler types",
      "files": [
        "wrangler.toml",
        "src/**/*"
      ],
      "output": [
        "worker-configuration.d.ts"
      ]
    },
    "build": {
      "command": "astro build",
      "dependencies": [
        "typecheck"
      ],
      "files": [
        "worker-configuration.d.ts",
        "src/**/*",
        "astro.config.mjs"
      ],
      "output": [
        "dist"
      ]
    }
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.1",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "astro": "^5.10.2",
    "sharp": "^0.34.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animated": "^2.0.0"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "wireit": "^0.14.12",
    "wrangler": "^4.22.0"
  }
}
